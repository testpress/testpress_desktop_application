{
  "name": "testpress_desktop_application",
  "productName": "Testpress",
  "version": "1.0.1",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && electron .",
    "dist": "electron-builder",
    "dist:mac-arm": "npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mas": "npm run build && electron-builder --mac mas --arm64",
    "dist:mas-dev": "npm run build && electron-builder --mac mas-dev --arm64"
  },
  "keywords": [],
  "author": "Testpress",
  "license": "ISC",
  "description": "Testpress Desktop Application",
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "@types/node": "^22.15.17"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-unhandled": "^5.0.0"
  },
  "build": {
    "appId": "in.testpress.lmsdemo.desktop",
    "productName": "Testpress",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "assets/**/*",
      "public/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "identity": "Testpress Tech Labs LLP (BHAB7LC35Y)",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "gatekeeperAssess": true,
      "provisioningProfile": "LMSDemoDesktopProfile.provisionprofile"
    },
    "mas": {
      "target": [
        {
          "target": "mas",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "identity": "Testpress Tech Labs LLP (BHAB7LC35Y)",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "gatekeeperAssess": false,
      "provisioningProfile": "LMSDemoDesktopProfile.provisionprofile"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    }
  }
}
