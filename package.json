{
  "name": "testpress_desktop_application",
  "productName": "Testpress",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:mas": "electron-builder --mac mas"
  },
  "keywords": [],
  "author": "Testpress",
  "license": "ISC",
  "description": "Testpress Desktop Application",
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "@types/node": "^22.15.17"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-unhandled": "^5.0.0"
  },
  "build": {
    "appId": "com.testpress.desktop",
    "productName": "Testpress",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.education"
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
